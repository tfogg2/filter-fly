<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myRefinementModal">
  New Refinement
</button>
<div class="modal fade" id="myRefinementModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Refinement</h4>
      </div>
      <div class="modal-body">
      	<%= simple_form_for @refinement, url: {action: "create"} do |f| %>
				<%= f.collection_select :type, Refinement::TYPES, :to_s, :humanize %></br></br>
				<%# f.collection_select :type, :to_s, :human %>
				<%= f.input :title %></br></br>
		 		<%= f.input :name %></br></br>
			  <%= f.input :tag %></br></br>
			  <%# f.input :collection_id, collection: @collections.ids %></br></br>
			  <%= f.button :submit %> 
		<% end %>
      </br>
		    <button class="btn ptn-primary"><%= link_to "Collections Page", collections_path %></button>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<button class="btn btn-default"><%= link_to "Refinements", refinements_path %></button>


