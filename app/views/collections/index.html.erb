
<h1> Collections </h1>

<h2><%= link_to "New Collection", new_collection_path %></h2>
<h2><%= link_to "Filters", filters_path %></h2>

<% @collections.each do |collection| %>
	<h3><%= collection.title %></h3>

	<h5><%= collection.filters %></h5>

	<p><%= link_to "Collection Tag", collection_path(collection) %></p>  
	<%= link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


